# Backend selection: cloudconvert | local
CONVERSION_BACKEND=local

# File size limit in bytes (default 2GB)
UPLOAD_MAX_BYTES=2147483648

# Auto-delete files after N minutes
AUTO_DELETE_MINUTES=30

# Enable ClamAV virus scan (requires clamscan or clamd)
ENABLE_VIRUS_SCAN=false

# Rate limiting per IP per hour
RATE_LIMIT_PER_HOUR=60

# CloudConvert configuration (server-side only)
CLOUDCONVERT_API_KEY=
CLOUDCONVERT_API_BASE=https://api.cloudconvert.com/v2

# Storage driver: memory | disk | s3
STORAGE_DRIVER=memory

# Disk storage path (used when STORAGE_DRIVER=disk)
DISK_STORAGE_PATH=.data/storage

# S3 configuration (used when STORAGE_DRIVER=s3)
AWS_REGION=
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
